<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_image6"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/milk"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/product_title6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Milky Milk"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/coupen_icon6"
        app:layout_constraintStart_toEndOf="@+id/product_image6"
        app:layout_constraintTop_toTopOf="@+id/product_image6"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/coupen_icon6"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/product_title6"
        app:layout_constraintTop_toBottomOf="@+id/product_title6"
        android:src="@drawable/local_offer"
        app:tint="#8000FF" />

    <TextView
        android:id="@+id/free_coupen6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Free Coupens"
        android:textColor="#8000FF"
        app:layout_constraintBottom_toBottomOf="@+id/coupen_icon6"
        app:layout_constraintStart_toEndOf="@+id/coupen_icon6"
        app:layout_constraintTop_toTopOf="@+id/coupen_icon6"
        android:layout_marginLeft="4dp" />

    <LinearLayout
        android:background="#8BC34A"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/product_price6"
        app:layout_constraintStart_toStartOf="@+id/coupen_icon6"
        app:layout_constraintTop_toBottomOf="@+id/coupen_icon6">

        <TextView
            android:id="@+id/tv_rating_detail_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="4.5"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="4dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_rating"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/product_price6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49,999/-"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/payment_method6"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/cutted_price6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rs.59,999/-"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_price6"
        app:layout_constraintStart_toEndOf="@+id/product_price6"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/payment_method6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash On Delivery Available"
        android:textColor="#A3A3A3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_image6"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/product_price6"
        app:layout_constraintTop_toBottomOf="@+id/product_price6" />

    <View
        android:id="@+id/price_cut"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#A3A3A3"
        app:layout_constraintBottom_toBottomOf="@+id/cutted_price6"
        app:layout_constraintEnd_toEndOf="@+id/cutted_price6"
        app:layout_constraintStart_toStartOf="@+id/cutted_price6"
        app:layout_constraintTop_toTopOf="@+id/cutted_price6" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:tint="@color/black"
        android:id="@+id/delet_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:cropToPadding="true"
        android:padding="6dp"
        android:src="@drawable/bin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/total_ratings6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="(8,123) ratings"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        android:layout_marginLeft="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>